<h1>Add an Item to your Inventory!</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@item) do |f| %>
      <%= f.label :name  %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :category  %>
      <%= f.text_field :category, class: 'form-control'   %>
      <%= f.label :typeofweather %>
      <%= f.text_field :typeofweather, class: 'form-control'   %><br>
      <%= f.submit "Add Me.", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>


